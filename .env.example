# Firebase (web client) - public keys for client initialization
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Optional: enable client-side emulator usage (true/false)
NEXT_PUBLIC_FIREBASE_EMULATORS=false
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_PORT=9099
NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_PORT=8080

# Admin (server/functions) - path to service account JSON on developer machine
GOOGLE_APPLICATION_CREDENTIALS=/home/<user>/.secrets/firebase-staging-sa.json

# WordPress REST API
WP_BASE_URL=https://staging.example.com
WP_USER=devuser
WP_APP_PASSWORD=

# Toggle to use real external services
USE_REAL_SERVICES=false
# Web app locales
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_LOCALES=en,hu
NEXT_PUBLIC_SITE_URL=https://local.dev
NEXT_PUBLIC_ANALYTICS_DEBUG=false

# Firebase client SDK
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FIREBASE_APP_ID=0:000000000000:web:abcdef123456
NEXT_PUBLIC_FIREBASE_EMULATORS=false
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_PORT=9099
NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_PORT=8080
NEXT_PUBLIC_FIREBASE_FUNCTIONS_URL=http://localhost:5001/your-project-id/us-central1

# WordPress headless CMS
WP_API_URL=https://cms.example.com
WP_GRAPHQL_URL=https://cms.example.com/graphql
WP_API_TOKEN=read-only-token

# Functions / server config
FIREBASE_EMULATORS=true
