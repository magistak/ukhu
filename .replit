modules = ["web", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["pnpm"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 32889
externalPort = 3001

[[ports]]
localPort = 34951
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/web && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd apps/web && npm start"]
build = ["bash", "-c", "cd apps/web && npm run build"]
