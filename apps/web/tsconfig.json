{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ukhu/i18n": ["../../packages/i18n/src"],
      "@ukhu/cms-client": ["../../packages/cms-client/src"],
      "@ukhu/checklists": ["../../packages/checklists/src"],
      "@ukhu/firebase": ["../../packages/firebase/src"]
    },
    "types": [
      "node",
      "next",
      "next/types/global"
    ],
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "next.config.ts",
    "app/**/*",
    "src/**/*",
    "public/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
