{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["apps/web/src/*"],
      "@ukhu/i18n": ["packages/i18n/src/index.ts"],
      "@ukhu/i18n/*": ["packages/i18n/src/*"],
      "@ukhu/cms-client": ["packages/cms-client/src/index.ts"],
      "@ukhu/cms-client/*": ["packages/cms-client/src/*"],
      "@ukhu/checklists": ["packages/checklists/src/index.ts"],
      "@ukhu/checklists/*": ["packages/checklists/src/*"],
      "@ukhu/firebase": ["packages/firebase/src/index.ts"],
      "@ukhu/firebase/*": ["packages/firebase/src/*"]
    }
  },
  "include": ["apps", "packages", "functions"],
  "exclude": ["node_modules", "dist", "build"]
}
